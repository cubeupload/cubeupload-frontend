{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ] 
    }
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}